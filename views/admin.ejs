<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Administrator</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/admin.css" />
  </head>
  <body>
    <%-include("partials/navAdmin")%>

    <div class="container">
      <div class="pt-5 d-flex justify-content-between">
        <h1><strong>Articles</strong></h1>
        <button type="button" class="btn btn-success h-25 mt-3 me-0">
          <a href="/admin/crear" style="text-decoration: none; color: white"
            >New</a
          >
        </button>
      </div>
      <table class="mt-3 table">
        <thead>
          <tr>
            <th scope="col">id</th>
            <th scope="col">Title</th>
            <th scope="col">Content</th>
            <th scope="col">Image</th>
            <th scope="col">Author</th>
            <th scope="col">createdAt</th>
            <th scope="col" class="d-flex flex-column align-items-center">
              Actions
            </th>
          </tr>
        </thead>

        <tbody>
          <% for(article of listaDeArticulos){ %>
          <tr>
            <td><%= article.id %></td>
            <td><%= article.title.slice(0,30) + "..." %></td>
            <td><%= article.content.slice(0,50) + "..." %></td>
            <td><%= article.image.slice(0,15) + "..." %></td>
            <td><%=article.userId.fullName%></td>
            <td><%= article.createdAt %></td>
            <td class="d-flex flex-column justify-content-center ">
              <button
                type="button"
                class="btn btn-primary w-100 mb-3"
                id="editBtn"
              >
                <a
                  href="/admin/editar/<%=article.id%>"
                  style="text-decoration: none; color: white"
                  >Edit</a
                >
              </button>
              <button type="submit" class="btn btn-danger w-100 mb-3">
                <a
                  href="/article/delete/<%=article.id%>"
                  style="text-decoration: none; color: white"
                  >Delete</a
                >
              </button>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
    <footer><%-include("partials/footer")%></footer>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
