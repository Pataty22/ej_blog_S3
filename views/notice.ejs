<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Notice</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/articleStyles.css" />
  </head>
  <body>
    <style>
      div#hero {
        background-image: linear-gradient(
            0deg,
            rgba(0, 0, 0, 0.5),
            rgba(0, 0, 0, 0.5)
          ),
          url("<%= article.image.includes('http') ? article.image : '/img/' + article.image %>");
      }
    </style>
    <% if (locals.user) { %>
      <header><%- include("partials/header") %></header>
      <% } else { %>
      <header><%- include("partials/header2") %></header>
      <% } %>
    <!-- HEADER -->
    <div
      id="hero"
      class="text-center">
      <h1><%=article.title %></h1>
      <p>
        Publicado el día <%=article.createdAt%> por <%=article.userId.fullName%>
      </p>
    </div>

    <div class="container">
      <div class="row align-items-center mt-5">
        <div class="col-md-6 mx-auto mb-3">
          <section id="content">
            <p><%=article.content%></p>
          </section>
          <hr />
        </div>
      </div>

      <div class="row align-items-center">
        <div class="col-md-6 mx-auto mt-3">
          <% if(locals.user){ %>
          <h5>Add your coment</h5>
          <form action="/article/review/<%=article.id%>" method="POST">
            <div class="mb-3">
              <label for="inputName" class="form-label"></label>
              <input
                type="text"
                class="form-control"
                id="inputName"
                name="inputName"
                aria-describedby="emailHelp"
                placeholder="Name"
              />
            </div>
            <div class="form-floating">
              <textarea
                class="form-control"
                id="content"
                name="content"
                style="height:150px; padding:10px;"
              ></textarea>
            </div>
            <button
              id="btn-send"
              type="submit"
              class="btn btn-primary mt-3 w-100"
            >
              Send
            </button>
          </form>
          <% } else { %>
             <h3><a href="/login">LogIn</a> para comentar</h3> 
          <% } %>
          <div id="comments" class="mt-5">
            <% if (listaDeComentarios.length > 0) { %>
            <h5>Comentarios (<%= listaDeComentarios.length %>)</h5>
            <% for (let i = 0; i < listaDeComentarios.length; i++) { %>
            <p><%= listaDeComentarios[i].content %></p>
            <small><%= listaDeComentarios[i].fullName %></small>
            <hr />
            <% } %> <% } else { %>
            <p>Aún no hay comentarios.</p>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <!-- FOOTER -->
    <footer><%-include("partials/footer")%></footer>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
      crossorigin="anonymous"
    ></script>
  </body>
</html>